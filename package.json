{
  "name": "vitesse-webext",
  "displayName": "Loon - Shop Canadian",
  "version": "0.1.60",
  "private": true,
  "packageManager": "pnpm@9.7.1",
  "description": "Find Canadian alternatives and deals as you shop online.",
  "scripts": {
    "dev": "pnpm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev-firefox": "pnpm run clear && cross-env NODE_ENV=development EXTENSION=firefox run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:background": "pnpm run build:background -- --mode development",
    "dev:web": "vite",
    "dev:js": "pnpm run build:js -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:prepare build:web build:background build:js",
    "build:prepare": "esno scripts/prepare.ts",
    "build:background": "vite build --config vite.config.background.mts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.mts",
    "pack": "pnpm run build && run-s pack:zip pack:crx",
    "pack:firefox": "cross-env EXTENSION=firefox pnpm run build && pnpm run pack:xpi",
    "pack:zip": "rimraf extension.zip && cd extension && zip -r ../extension.zip . -x '**/.DS_Store'",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "pnpm run pack:firefox && web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "rimraf --glob extension/dist extension/manifest.json extension.*",
    "lint": "eslint --cache .",
    "test": "vitest test",
    "test:e2e": "playwright test",
    "postinstall": "simple-git-hooks",
    "typecheck": "tsc --noEmit",
    "version": "node -e \"const fs = require('fs'); const manifest = require('./extension/manifest.json'); const pkg = require('./package.json'); manifest.version = pkg.version; fs.writeFileSync('./extension/manifest.json', JSON.stringify(manifest, null, 2));\""
  },
  "dependencies": {
    "axios": "^1.10.0",
    "country-flag-emoji": "^1.0.3",
    "lucide-vue-next": "^0.510.0",
    "tldts": "^7.0.5",
    "vue-i18n": "^11.1.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.27.0",
    "@ffflorian/jszip-cli": "^3.7.1",
    "@iconify-json/lucide": "^1.2.42",
    "@iconify/json": "^2.2.239",
    "@playwright/test": "^1.46.1",
    "@types/debounce-promise": "^3.1.9",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.5.0",
    "@types/webextension-polyfill": "^0.12.0",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@unocss/reset": "^0.62.2",
    "@vitejs/plugin-vue": "^5.1.2",
    "@vue/compiler-sfc": "^3.4.38",
    "@vue/test-utils": "^2.4.6",
    "@vueuse/core": "^11.0.1",
    "chokidar": "^3.6.0",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^9.9.0",
    "esno": "^4.7.0",
    "fs-extra": "^11.2.0",
    "jsdom": "^24.1.1",
    "kolorist": "^1.8.0",
    "lint-staged": "^15.2.9",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "terser": "^5.43.1",
    "typescript": "^5.5.4",
    "unocss": "^0.62.2",
    "unplugin-auto-import": "^0.18.2",
    "unplugin-icons": "^0.19.2",
    "unplugin-vue-components": "^0.27.4",
    "vite": "^5.4.19",
    "vitest": "^2.0.5",
    "vue": "^3.4.38",
    "vue-demi": "^0.14.10",
    "web-ext": "^8.2.0",
    "webext-bridge": "^6.0.1",
    "webextension-polyfill": "^0.12.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
